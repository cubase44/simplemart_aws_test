<div class="container py-4" id="items">
  <div class="card-deck">
  <% @items.each do |item| %>
    <div class="card">
          <a href="/items/<%= item.id %>" class="card-body text-dark">
          <%= image_tag item.image_tag , :size =>'300x350' %>
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text"><%= item.item_description %></p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </a>
      </div>
      <% end %>
  </div>
</div>


